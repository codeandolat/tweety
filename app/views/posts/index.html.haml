.columns
  .column.is-half.is-offset-one-quarter
    - @posts.each do |post|
      .box
        %article.media
          .media-left
            %figure.image.is-64x64
              - if post.user.image.nil?
                %img(src="https://bulma.io/images/placeholders/64x64.png" alt="Image")
              - else
                %img(src="#{post.user.image}" alt="Image")
          .media-content
            .content
              %p
                %strong
                  = link_to post.name, post_path(post)
                %small.has-text-weight-semibold
                  - if post.user.username.nil?
                    = post.user.email
                  - else
                    @#{post.user.username}
                %small.is-italic.is-pulled-right= distance_of_time_in_words(post.created_at, Time.now, include_seconds: true)
                %br
                = post.content
            %nav.level.is-mobile
              .level-left.post-icons-container
                %a.level-item
                  %span.icon.is-small
                    = fa_icon "reply", class: "mr10"
                    %span 12
                %a.level-item
                  %span.icon.is-small
                    = fa_icon "retweet", class: "mr10"
                    %span 12
                %a.level-item
                  %span.icon.is-small
                    = fa_icon "heart-o", class: "mr10"
                    %span 12
