.columns
  .column.has-text-right
    = link_to 'Regresar', posts_path
.columns
  .column.is-half.is-offset-one-quarter
    = render "partials/post_card", post: @post
    .columns
      .column
        %h4.title.is-4 Comentarios (#{@post.comments.count})
      .column.has-text-right
        %a#comment-button.button.is-primary(data-target="#modal") Comentar
    - unless @post.comments.empty?
      = render @post.comments
    = render "comments/form"
